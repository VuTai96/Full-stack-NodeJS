<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>edit user's information</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>

</head>

<body>
    <div class="container">
        <h3>Edit user's information:</h3>
        <div class="form-row mt-3">
            <div class="form-group col-sm-8">
                <form action="/put-crud" method="post">

                    <div class="form-row ">
                        <div class="form-group col-sm-6">
                            <label for="firstName">First name</label>
                            <input type="text" class="form-control" id="firstName" name="firstName"
                                value="<%= userData.firstName %>" placeholder="firstName" />
                        </div>
                        <div class="form-group col-sm-6">
                            <label for="lastName">Last name</label>
                            <input type="text" class="form-control" id="lastName" name="lastName"
                                value="<%= userData.lastName %>" placeholder="lastName" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-12">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" id="address" name="address"
                                value="<%= userData.address %>" placeholder="1234 Main St" />
                        </div>
                    </div>
                    <input type="text" name="id" value="<%= userData.id %> " hidden />

                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
            <div class="form-group col-sm-4">
            </div>
        </div>
    </div>


</body>

</html>